on:
  issues:
    types: [labeled]
jobs:
  add-to-team:
    runs-on: ubuntu-latest
    steps:
    - name: react
      if: contains(toJson(github.event.issue.labels.*.name), 'team1')
      run: |
        curl -X PUT -H "Authorization: token ${{ secrets.GITHUB_TOKEN }}" -H "Accept: application/vnd.github+json" https://api.github.com/teams/${{ env.React_ID }}/memberships/${{ github.event.issue.user.login }}
    - name: cyber warrior
      if: contains(toJson(github.event.issue.labels.*.name), 'team2')
      run: |
        curl -X PUT -H "Authorization: token ${{ secrets.GITHUB_TOKEN }}" -H "Accept: application/vnd.github+json" https://api.github.com/teams/${{ 7280536 }}/memberships/${{ github.event.issue.user.login }}
    - name: DevOps
      if: contains(toJson(github.event.issue.labels.*.name), 'DevOps')
      run: |
        curl -X PUT -H "Authorization: token ${{ secrets.GITHUB_TOKEN }}" -H "Accept: application/vnd.github+json" https://api.github.com/teams/${{ 7280769 }}/memberships/${{ github.event.issue.user.login }}
    - name: Cloud
      if: contains(toJson(github.event.issue.labels.*.name), 'team4')
      run: |
        curl -X PUT -H "Authorization: token ${{ secrets.GITHUB_TOKEN }}" -H "Accept: application/vnd.github+json" https://api.github.com/teams/${{ 7280770 }}/memberships/${{ github.event.issue.user.login }}
    - name: web3
      if: contains(toJson(github.event.issue.labels.*.name), 'team5')
      run: |
        curl -X PUT -H "Authorization: token ${{ secrets.GITHUB_TOKEN }}" -H "Accept: application/vnd.github+json" https://api.github.com/teams/${{ env.Web3_ID }}/memberships/${{ github.event.issue.user.login }}
    - name: MAC
      if: contains(toJson(github.event.issue.labels.*.name), 'team6')
      run: |
        curl -X PUT -H "Authorization: token ${{ secrets.GITHUB_TOKEN }}" -H "Accept: application/vnd.github+json
